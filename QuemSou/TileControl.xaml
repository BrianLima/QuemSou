<UserControl x:Class="QuemSou.TileControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="240" d:DesignWidth="240">

    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneAccentBrush}">
        <TextBlock x:Name="category" Margin="10,10,10,-196" TextWrapping="Wrap" Text="{Binding category}" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
        <TextBlock x:Name="description" Margin="10,70,10,0" TextWrapping="Wrap" Text="{Binding description}" VerticalAlignment="Top" RenderTransformOrigin="0.61,0.741" Height="160"/>
    </Grid>
</UserControl>